
@using CCPDemo.Web.Areas.App.Models.Common.Modals
@using CCPDemo.Web.Areas.App.Models.RiskGroupings
@model RiskGroupingViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="RiskGroupingInformationsTab">

        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Value") :</h6>
                @Model.RiskGrouping.Value
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Name") :</h6>
                @Model.RiskGrouping.Name
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Default") :</h6>
                @Model.RiskGrouping.Default
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Order") :</h6>
                @Model.RiskGrouping.Order
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")