            </div>
            <div class="col-6 mb-3">
                <h6>@L("ActualClosureDate") :</h6>
                @Model.Risk.ActualClosureDate
            </div>
            <div class="col-6 mb-3">
                <h6>@L("RiskAccepted") :</h6>
                @Model.Risk.RiskAccepted
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")