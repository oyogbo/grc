@using CCPDemo.Web.Areas.App.Models.Common.Modals
@model RiskModalViewModel

@{
    var disabledBtn = Model.isSaveButtonEnabled ? "" : "disabled";
    var resetAcceptanceBtn = (!Model.isSaveButtonEnabled && Model.isERM) ? "<button type='button' class='btn btn-warning reset-acceptance' style='position:absolute;left: 20px;'><i class='fa fa-recycle'></i> <span>Reset Acceptance</span></button>" : "";
}

<div class="modal-footer" style="position: relative">
    @Html.Raw(resetAcceptanceBtn)
    <button type="button" class="btn btn-light-primary font-weight-bold close-button" data-bs-dismiss="modal">@L("Cancel")</button>
    <button type="button" class="btn btn-primary save-button" @disabledBtn><i class="fa fa-save"></i> <span>@L("Save")</span></button>
</div>