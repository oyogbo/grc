
@using System.Globalization
@using CCPDemo.Web.Areas.App.Models.Common.Modals
@using CCPDemo.Web.Areas.App.Models.RiskStatus
@model CreateOrEditRiskStatusModalViewModel
@using Abp.Extensions
@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditRiskStatus")) : L("CreateNewRiskStatus")))

<div class="modal-body">
    <div id="RiskStatusInformationsTab">
        <form name="RiskStatusInformationsForm" role="form" novalidate class="form-validation">

            @if (Model.IsEditMode)
            {
            <input type="hidden" name="id" value="@Model.RiskStatus.Id" />
            }

            <div class="my-3">
                <label class="form-label" for="RiskStatus_Name">@L("Name")</label>
                <input class="form-control" id="RiskStatus_Name" value="@Model.RiskStatus.Name" type="text" name="name" required />
            </div>

        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml", new RiskModalViewModel{isSaveButtonEnabled = true})